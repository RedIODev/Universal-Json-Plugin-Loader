{
    
    "title": "Init-schema",
    "description": "Defines the shape of the event args",
    "type": "object",

    "properties": {
        "core_version": {
            "type": "string"
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "version": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": ["core_version", "plugins"]
}