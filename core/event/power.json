{
    "title": "Power-schema",
    "description": "Defines the shape of the event args",
    "type": "object",

    "properties": {
        "command": {
            "enum": ["shutdown", "restart", "cancel"]
        },
        "timestamp": {
            "type": "string"
        },
        "delay": {
            "type": "number"
        }
    },
    "required": ["command", "timestamp"]
}

