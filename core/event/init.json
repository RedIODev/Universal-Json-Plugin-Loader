{
    
    "title": "Init-schema",
    "description": "The arguments for the event that is triggered when the application initializes.",
    "type": "object",

    "properties": {
        "core_version": {
            "description": "The version of the loader.",
            "type": "string"
        },
        "plugins": {
            "description": "The plugins loaded on init.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "The name of a plugin.", 
                        "type": "string"
                    },
                    "version": {
                        "description": "The version of a plugin.",
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": ["core_version", "plugins"]
}